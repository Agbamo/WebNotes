<div class="wrapper_with_padding">
  <div class="row">
    <div class="column">
      <div class="clearfix" id="notes">
        <% unless @notes.blank? %>
        <h1 class="center">My Notes</h1>
        <% @notes.each do |note| %>
        <a href="<%= (url_for [note]) %>">
          <div class="note">
            <p class="title">
              <%= note.title %>
            </p>
            <p class="date">
              <%= time_ago_in_words(note.created_at) %>
            </p>
          </div>
        </a>
        <% end %>
        <% else %>
        <h2>Add a new note</h2>
        <p>Create your first Note!</p>
        <% end %>
      </div>
    </div>
    <div class="column">
      <div class="clearfix" id="collections">
        <% unless @collections.blank? %>
        <h1 class="center">My Collections</h1>
        <% @collections.each do |collection| %>
        <a href="<%= (url_for [collection]) %>">
          <div class="collection">
            <p class="title">
              <%= collection.title %>
            </p>
            <p class="date">
              <%= time_ago_in_words(collection.created_at) %>
            </p>
          </div>
        </a>
        <% end %>
        <% else %>
        <h2>Add a new collection</h2>
        <p>Create your first Collection!</p>
        <% end %>
      </div>
    </div> 
  </div>
  
  
</div>

